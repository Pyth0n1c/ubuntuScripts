#!/bin/bash

####disableLockScreen

#https://ubuntu-mate.community/t/disable-keyring-for-ssh/9752/3
#https://ubuntuforums.org/showthread.php?t=1003471
#https://ubuntu-mate.community/t/how-to-disable-keyring-password-storage-for-chrome/2904
#https://askubuntu.com/questions/867/how-can-i-stop-being-prompted-to-unlock-the-default-keyring-on-boot

#gsettings set org.gnome.desktop.screensaver lock-enabled false
dconf write /org/mate/desktop/lockdown/disable-lock-screen true &&
dconf write /org/gnome/desktop/lockdown/disable-lock-screen true

if [ $? -eq 0 ]; then

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "false" WHERE name = "LockScreen";
END_SQL

else
    echo FAIL
fi