#!/bin/bash

if [ $(dpkg-query -W -f='${Status}' apt-fast 2>/dev/null | grep -c "ok installed") -eq 0 ]
then
  echo "apt-fast not installed, installing it..."
  sleep 2
  sudo rm /etc/apt/sources.list.d/saiarcot895-ubuntu-myppa-zesty.list
  sudo rm /etc/apt/sources.list.d/saiarcot895-ubuntu-myppa-zesty.list.save
  sh ~/.ubunsys/downloads/ubuntupackages-master/apps1/004.apt-fast
  echo "apt-fast installed, You're ready to rock on!!"

else echo "apt-fast installed, not changes necessary. You're ready to rock on!!"
  
fi

sleep 2