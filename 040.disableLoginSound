#!/bin/bash

####disableLoginSound

mv /usr/share/sounds/ubuntu/stereo/system-ready.ogg /usr/share/sounds/ubuntu/stereo/system-ready.ogg_ubunsys

if [ $? -eq 0 ]; then

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "false" WHERE name = "loginSound";
END_SQL

else
    echo FAIL
fi