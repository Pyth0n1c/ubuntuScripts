#!/bin/bash

#### downloadLatestUbuntuscripts

test -d ~/.ubunsys || mkdir -p ~/.ubunsys
test -d ~/.ubunsys/downloads || mkdir -p ~/.ubunsys/downloads

wget https://github.com/adgellida/ubuntuScripts/archive/master.zip -O ~/.ubunsys/master.zip && rm -Rf ~/.ubunsys/downloads/ubuntuScripts-master && unzip -qq ~/.ubunsys/master.zip -d ~/.ubunsys/downloads && chmod 777 -R ~/.ubunsys/downloads/ubuntuScripts-master && rm ~/.ubunsys/master.zip && echo Download ok. || echo Error Downloading. Holding your scripts. && sleep 2