#!/bin/bash

####enableSudoWithoutPassAll

FILE=/etc/sudoers.d/all_sudoers_addition
FILE2="$HOME/.ubunsys/status/SudoWOPass.txt"

if [ -f "$FILE" ]; then
   echo "File $FILE exists, nothing to do. Presh ENTER"
   read
else
   echo "File $FILE does not exist, applying changes"
   echo "Put sudo pass:"
   LINE="$USER ALL = NOPASSWD: ALL"
   pkexec sh -c "echo $LINE > $FILE"
   echo "sudo without pass - all added correctly. Presh ENTER"
   echo Enabled > $FILE2
   read
fi