#!/bin/bash

####enableSudoWithoutPassAll

FILE=/etc/sudoers.d/all_sudoers_addition

echo "Put sudo pass:"
LINE="$USER ALL = NOPASSWD: ALL"
pkexec sh -c "echo $LINE > $FILE"

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "Enabled" WHERE name = "sudoWOPass";
END_SQL

echo "sudo without pass - all added correctly. Presh ENTER"
read