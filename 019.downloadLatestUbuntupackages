#!/bin/bash

#### downloadLatestUbuntupackages

test -d ~/.ubunsys || mkdir -p ~/.ubunsys
test -d ~/.ubunsys/downloads || mkdir -p ~/.ubunsys/downloads

wget https://github.com/adgellida/ubuntupackages/archive/master.zip -O ~/.ubunsys/master.zip && rm -Rf ~/.ubunsys/downloads/ubuntupackages-master && unzip ~/.ubunsys/master.zip &>/dev/null -d ~/.ubunsys/downloads && chmod 777 -R ~/.ubunsys/downloads/ubuntupackages-master && rm ~/.ubunsys/master.zip && echo Download ok. || echo Error Downloading. Holding your ubuntupackages. && sleep 2