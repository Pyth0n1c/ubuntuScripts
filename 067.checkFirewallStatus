#!/bin/bash

####checkFirewallStatus
export LANGUAGE=C
export LANG=C
OUTPUT="$(sudo ufw status)"
echo "${OUTPUT}"
unset LANGUAGE
unset LANG

if [ "${OUTPUT}" = "Status: active" ]; then

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "Enabled" WHERE name = "firewall";
END_SQL

else
sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "Disabled" WHERE name = "firewall";
END_SQL
fi

#read