#sudo sed -i '/Defaults	!authenticate/d' /etc/sudoers
#echo "$SUDO_USER ALL=(ALL:ALL) ALL" | sudo tee -a /etc/sudoers > /dev/null
#echo "usuario ALL=(ALL:ALL) ALL" | sudo tee -a /etc/sudoers > /dev/null